<? xml version="1.0" encoding="utf-8" ?>
<state name="Login" packet="cn.along.module.flow">
	<input style="single">
		<struct name="info">
			<member name="user_name" type="string" pass-type="in" comment="用户名" />
			<member name="password"  type="string" pass-type="in" comment="密码"   />
			<member name="dp_pwd"    type="string" pass-type="out" comment="dp"    />
			<input-sql sql-statement="select user_pwd from users where user_name= ?">
				<param type="string" value="$INPUT.user_name" />
			</input-sql>
			<input-method name="" />
			<input-session>
				<map src="" dest="" /> 
			</input-session>
			<input-global>
				<map src="" dest="" /> 
			</input-global>
			<input-cookie>
				<map src="" dest="" /> 
			</input-cookie>
		</struct>	
	</input>
	<switch>
	   <case value="1" redirect="name">
		<output>
		    <struct name="">
		    </struct>
		</output>
	   </case>
	   <default forward="welcome">
		<output>
		    <struct name="">
		    </struct>
		</output>
	   </default>
	</switch>
</state>
